[window]
padding = { x = 5, y = 5 }
opacity = 0.5

[cursor]
style = {blinking = "Always", shape = "Beam"}
blink_timeout = 0
blink_interval = 500
thickness = 0.2

[font]
normal = { family = "JetBrainsMonoNL Nerd Font Mono", style = "Bold" }
bold = { family = "JetBrainsMonoNL Nerd Font Mono", style = "Extra Bold" }
italic = { family = "JetBrainsMonoNL Nerd Font Mono", style = "Italic" }
bold_italic = { family = "JetBrainsMonoNL Nerd Font Mono", style = "Extra Bold Italic" }
size = 11.25
